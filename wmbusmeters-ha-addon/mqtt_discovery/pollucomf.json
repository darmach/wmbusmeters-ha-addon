{
    "total_kwh": {
        "component": "sensor",
        "discovery_payload": {
            "device": {
                "identifiers": [
                    "wmbusmeters_{id}"
                ],
                "manufacturer": "Sensus",
                "model": "{driver}",
                "name": "{name}",
		"serial_number": "{id}"
            },
            "enabled_by_default": true,
            "json_attributes_topic": "wmbusmeters/{name}",
            "state_class": "total",
            "device_class": "energy",
            "name": "Total Energy",
            "state_topic": "wmbusmeters/{name}",
            "unique_id": "wmbusmeters_{id}_{attribute}",
            "unit_of_measurement": "kWh",
            "value_template": "{{ value_json.{attribute} }}",
            "icon": "mdi:gauge"
        }
    },
